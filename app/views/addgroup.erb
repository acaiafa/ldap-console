<div class="row" style="padding-top: 100px">
   <div id="flash">
     <div class="flash info" style="color:green"><h1><%= flash[:alert] %></h1></div>
     <div class="flash fatal" style="color:red"><h1><%= flash[:error] %></h1></div>
  </div>
  <h3> Add group </h3>
  <h5> This form allows you to add a new group to LDAP. <h5>
      <br><br><br>
      <form action='/addgroupldap' method='post' class='form-horizontal'>
        <div class="form-group">
          <label class="col-sm-2 control-label">New Group Name:</label>
          <div class="col-sm-10">
            <input type='text' class='form-control' name='group' placeholder="Group Name">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <br><br>
            <button type='submit' value='Submit' class="btn btn-primary">Submit</button>
          </div>
        </div>
        <br><br>
      </form>
    </div>
